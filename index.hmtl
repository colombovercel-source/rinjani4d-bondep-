<!DOCTYPE html>
<html lang="id">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>RINJANI4D Premium Member</title>

<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@600&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">

<style>
body{
    margin:0;
    background:#1f1f1f;
    font-family:'Inter',sans-serif;
    display:flex;
    justify-content:center;
    padding:20px 0;
}

.wrapper{
    width:95%;
    max-width:480px;
}

.brand{
    text-align:center;
    margin-bottom:20px;
}

.brand h1{
    font-family:'Playfair Display',serif;
    color:#d4af37;
    margin:0;
    font-size:28px;
    letter-spacing:1.5px;
}

.brand p{
    margin-top:5px;
    font-size:13px;
    color:#ddd;
}

.card{
    background:#f9f9f9;
    padding:20px;
    border-radius:12px;
    box-shadow:0 8px 30px rgba(0,0,0,0.4);
    margin-bottom:20px;
    border:1px solid rgba(212,175,55,0.3);
}

.card h2{
    text-align:center;
    color:#d4af37;
    margin-top:0;
    font-size:18px;
}

input{
    width:100%;
    padding:12px;
    margin-bottom:12px;
    border-radius:6px;
    border:1px solid #ccc;
    font-size:14px;
}

input:focus{
    outline:none;
    border-color:#d4af37;
}

.button{
    width:100%;
    padding:14px;
    background:#d4af37;
    border:none;
    border-radius:6px;
    font-weight:600;
    cursor:pointer;
}

.button:hover{
    background:#b8932f;
}

.detail{
    display:flex;
    justify-content:space-between;
    font-size:14px;
    margin-bottom:8px;
}

.progress-container{
    width:100%;
    height:10px;
    background:#ddd;
    border-radius:20px;
    margin-top:15px;
    overflow:hidden;
}

.progress-bar{
    height:100%;
    width:0%;
    background:linear-gradient(270deg,#ffd700,#fff0a0,#ffd700);
    background-size:400% 400%;
    animation:shimmer 2s linear infinite;
}

@keyframes shimmer{
    0%{background-position:0% 50%;}
    50%{background-position:100% 50%;}
    100%{background-position:0% 50%;}
}

.status-text{
    text-align:center;
    font-size:13px;
    margin-top:10px;
    color:#444;
}

.history-container{
    max-height:200px;
    overflow-y:auto;
    margin-top:15px;
    border-top:1px solid #ddd;
    padding-top:10px;
}

.history-item{
    display:flex;
    justify-content:space-between;
    font-size:13px;
    padding:6px 0;
    border-bottom:1px solid #eee;
}

.footer{
    text-align:center;
    font-size:12px;
    color:#aaa;
    margin-top:10px;
}

.modal{
    display:none;
    position:fixed;
    top:0;
    left:0;
    width:100%;
    height:100%;
    background:rgba(0,0,0,0.7);
    justify-content:center;
    align-items:center;
}

.modal-content{
    background:#fff;
    padding:25px;
    border-radius:12px;
    text-align:center;
    width:90%;
    max-width:350px;
}

.modal h2{
    color:#d4af37;
}

.modal button{
    margin:5px;
    padding:10px 15px;
    border:none;
    border-radius:6px;
    cursor:pointer;
    font-weight:600;
}

.button-close{background:#ccc;}
.button-cs{background:#d4af37;}
</style>
</head>
<body>

<div class="wrapper">

<div class="brand">
    <h1>RINJANI4D</h1>
    <p>Premium Member System</p>
</div>

<div class="card" id="loginCard">
    <h2>Member Login</h2>
    <input type="text" id="username" placeholder="User ID">
    <input type="password" id="password" placeholder="Password">
    <button class="button" onclick="login()">Login</button>
</div>

<div class="card" id="bonusCard" style="display:none;">
    <h2>BONUS DEPOSIT</h2>

    <input type="number" id="deposit" placeholder="Masukkan Deposit (min 10.000)" min="10000">

    <div class="detail"><span>Deposit</span><span id="displayDeposit">-</span></div>
    <div class="detail"><span>Bonus 100%</span><span id="displayBonus">-</span></div>
    <div class="detail"><span>Turnover</span><span id="displayTurnover">-</span></div>

    <button class="button" onclick="activateBonus()">Aktivasi Bonus</button>

    <div class="progress-container">
        <div class="progress-bar" id="progressBar"></div>
    </div>

    <div class="status-text" id="statusText">Status: Menunggu Aktivasi</div>

    <div class="history-container" id="historyContainer"></div>
</div>

<div class="footer">Â© 2026 RINJANI4D</div>
</div>

<!-- Modal -->
<div id="bonusModal" class="modal">
    <div class="modal-content">
        <h2>Bonus Aktif</h2>
        <p id="modalMessage"></p>
        <button class="button-close" onclick="closeModal()">Tutup</button>
        <button class="button-cs" onclick="window.open('https://rinjanipuncak.com/')">Hubungi CS</button>
    </div>
</div>

<script>

let names = ["agus","mika","miswan","rizal","budi","sinta","rahma","andika","rudi","tania","fajar","putri","dian","farhan","yoga","zaki","rio","nina","sari","doni"];
let historyData = [];

for(let i=0;i<20;i++){
    let randomName = names[Math.floor(Math.random()*names.length)];
    let userId = randomName + Math.floor(Math.random()*999);
    let deposit = Math.floor(Math.random()*(1000000-10000)/1000)*1000;
    historyData.push({userId,deposit});
}

function renderHistory(){
    const container=document.getElementById("historyContainer");
    container.innerHTML="";
    historyData.forEach(item=>{
        let div=document.createElement("div");
        div.className="history-item";
        div.innerHTML=`<span>${item.userId}</span><span>IDR ${item.deposit.toLocaleString('id-ID')}</span>`;
        container.appendChild(div);
    });
}
renderHistory();

function login(){
    document.getElementById("loginCard").style.display="none";
    document.getElementById("bonusCard").style.display="block";
}

function activateBonus(){
    let deposit=parseInt(document.getElementById("deposit").value);
    if(!deposit||deposit<10000){alert("Minimal deposit 10.000");return;}

    let bonus=deposit>1000000?1000000:deposit;
    let turnover=deposit<=50000?"0x":(deposit<=200000?"1x":"2x");

    document.getElementById("displayDeposit").innerText="IDR "+deposit.toLocaleString('id-ID');
    document.getElementById("displayBonus").innerText="IDR "+bonus.toLocaleString('id-ID');
    document.getElementById("displayTurnover").innerText=turnover;

    historyData.unshift({userId:document.getElementById("username").value,deposit});
    if(historyData.length>20)historyData.pop();
    renderHistory();

    let width=0;
    let progressBar=document.getElementById("progressBar");
    let statusText=document.getElementById("statusText");

    let interval=setInterval(()=>{
        width+=2;
        progressBar.style.width=width+"%";
        if(width>=100){
            clearInterval(interval);
            statusText.innerText="Bonus Aktif! Silakan screenshot & kirim ke CS";
            document.getElementById("modalMessage").innerHTML=
                `Deposit: IDR ${deposit.toLocaleString('id-ID')}<br>
                 Bonus: IDR ${bonus.toLocaleString('id-ID')}<br>
                 Turnover: ${turnover}`;
            document.getElementById("bonusModal").style.display="flex";
        }
    },40);
}

function closeModal(){
    document.getElementById("bonusModal").style.display="none";
}

</script>

</body>
</html>
